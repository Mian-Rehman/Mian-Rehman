<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_sett_pass"
    tools:context=".Frag_Setting_password">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="15dp"
               android:gravity="center"
               android:orientation="horizontal"
               android:background="@color/Dark_Blue"

               >

               <ImageView
                   android:id="@+id/img_password_back"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_arrow_back"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingLeft="30dp"
                   android:fontFamily="sans-serif-black"
                   android:text="Password"
                   />

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="#D3E6E9"
               android:padding="30dp"

               >


               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:src="@drawable/adminlogo"
                   android:layout_gravity="center"
                   />



           </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="40dp"

           >

           <EditText
               android:id="@+id/ed_current_pass"
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:inputType="textPassword"
               android:hint="Current Password"
               android:textColorHint="#DF3B5774"
               android:drawableTint="@color/Dark_Blue"
               android:textColor="@color/Dark_Blue"
               android:drawablePadding="10dp"
               android:drawableLeft="@drawable/ic_lock" />


           <EditText
               android:id="@+id/ed_new_pass"
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:inputType="textPassword"
               android:hint="New Password"
               android:textColorHint="#DF3B5774"
               android:drawableTint="@color/Dark_Blue"
               android:textColor="@color/Dark_Blue"
               android:drawablePadding="10dp"
               android:drawableLeft="@drawable/ic_lock" />

           <EditText
               android:id="@+id/ed_confirm_pass"
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:inputType="textPassword"
               android:hint="Confirm Password"
               android:textColorHint="#DF3B5774"
               android:drawableTint="@color/Dark_Blue"
               android:textColor="@color/Dark_Blue"
               android:drawablePadding="10dp"
               android:drawableLeft="@drawable/ic_lock" />

           <Button
               android:id="@+id/btn_newPass_save"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:text="Save"
               android:textAllCaps="false"
               android:textColor="@color/white"
               android:backgroundTint="@color/Dark_Blue"
               android:background="@drawable/sign_up_button"
               />



       </LinearLayout>






       </LinearLayout>




   </RelativeLayout>

</FrameLayout>