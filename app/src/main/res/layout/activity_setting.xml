<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/setting_framlayout"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_setting"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/Dark_Blue"

                >

                <ImageView
                    android:id="@+id/img_setting_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Setting"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#D3E6E9"
                android:padding="30dp"

                >


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/adminlogo"
                    android:layout_gravity="center"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="40dp"

                >

                <LinearLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_lock_icon"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/setting_lock_icon"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_password_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Password"
                            android:textSize="14sp"
                            android:textColor="@color/Dark_Blue"
                            android:fontFamily="sans-serif-black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Change account password"
                            android:textSize="12sp"
                            android:textColor="@color/Dark_Blue"

                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_account_icon"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/ic_key"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_account_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Accounts"
                            android:textSize="14sp"
                            android:textColor="@color/Dark_Blue"
                            android:fontFamily="sans-serif-black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Change Bios, Phone No and privacy policy"
                            android:textSize="12sp"
                            android:textColor="@color/Dark_Blue"

                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/security_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_security_icon"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/ic_security"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_security_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Security"
                            android:textSize="14sp"
                            android:textColor="@color/Dark_Blue"
                            android:fontFamily="sans-serif-black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Check security policies"
                            android:textSize="12sp"
                            android:textColor="@color/Dark_Blue"

                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_help_icon"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/ic_help"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_help_setting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Help?"
                            android:textSize="14sp"
                            android:textColor="@color/Dark_Blue"
                            android:fontFamily="sans-serif-black"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Help center, Contact us, privacy policy"
                            android:textSize="12sp"
                            android:textColor="@color/Dark_Blue"

                            />
                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/invite_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="35dp"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/img_invite_icon"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/setting_connect"

                        />

                    <TextView
                        android:id="@+id/tv_invite_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="invite friends"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/Dark_Blue"
                        android:fontFamily="sans-serif-black"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="From BLUEJAY"
                    android:textSize="16sp"
                    android:textColor="@color/Dark_Blue"
                    android:fontFamily="sans-serif-black"
                    android:gravity="bottom"
                    android:layout_gravity="center|bottom"/>








            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>